# Frontend Environment Variables - Menschlichkeit Österreich
# Copy to .env.local for local development
# For production, use GitHub Secrets

# API Configuration
VITE_API_BASE_URL=http://localhost:8001
VITE_API_TIMEOUT_MS=15000

# Application Configuration
VITE_APP_NAME="Menschlichkeit Österreich"
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Austrian NGO Specific
VITE_ORG_NAME="Menschlichkeit Österreich" 
VITE_ORG_DOMAIN=menschlichkeit-oesterreich.at
VITE_CONTACT_EMAIL=info@menschlichkeit-oesterreich.at

# CiviCRM Integration
VITE_CIVICRM_BASE_URL=http://localhost:8000
VITE_CIVICRM_API_ENDPOINT=/api/v4

# Educational Games Integration  
VITE_GAMES_BASE_URL=http://localhost:3001
VITE_GAMES_API_URL=http://localhost:8001/games

# E-Mail Integration (Display purposes only - no passwords in frontend!)
VITE_CONTACT_EMAIL=info@menschlichkeit-oesterreich.at
VITE_SUPPORT_EMAIL=support@menschlichkeit-oesterreich.at
VITE_PRIVACY_EMAIL=datenschutz@menschlichkeit-oesterreich.at

# Feature Flags
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_DONATIONS=true
VITE_ENABLE_GAMES=true
VITE_ENABLE_NEWSLETTER=true

# Localization
VITE_DEFAULT_LOCALE=de_AT
VITE_SUPPORTED_LOCALES=de_AT,en_US

# Performance & Analytics (Privacy-compliant)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_PROVIDER=matomo_self_hosted

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_DEBUG_MODE=true


[
  // ================================
  // Menschlichkeit Ã–sterreich Development - Custom Keybindings
  // ================================
  
  // Terminal Management
  {
    "key": "ctrl+shift+`",
    "command": "workbench.action.terminal.new",
    "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
  },
  {
    "key": "ctrl+shift+c",
    "command": "workbench.action.terminal.openNativeConsole",
    "when": "!terminalFocus"
  },
  
  // Quick Development Commands
  {
    "key": "ctrl+shift+d",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "dev\u000D" }
  },
  {
    "key": "ctrl+shift+b",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "build\u000D" }
  },
  {
    "key": "ctrl+shift+t",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "test\u000D" }
  },
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "lint\u000D" }
  },
  {
    "key": "ctrl+shift+q",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "quality\u000D" }
  },
  
  // Git Shortcuts
  {
    "key": "ctrl+g ctrl+s",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "gs\u000D" }
  },
  {
    "key": "ctrl+g ctrl+a",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "ga\u000D" }
  },
  {
    "key": "ctrl+g ctrl+p",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "gp\u000D" }
  },
  
  // Docker Management
  {
    "key": "ctrl+shift+u",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "docker-up\u000D" }
  },
  {
    "key": "ctrl+shift+k",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "docker-down\u000D" }
  },
  
  // Project Help
  {
    "key": "ctrl+shift+h",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "help\u000D" }
  },
  
  // ================================
  // Enhanced Code Navigation
  // ================================
  
  // Quick File Navigation
  {
    "key": "ctrl+shift+o",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+shift+f",
    "command": "workbench.view.search"
  },
  
  // Multi-Cursor Enhanced
  {
    "key": "ctrl+shift+alt+down",
    "command": "editor.action.insertCursorBelow",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+alt+up",
    "command": "editor.action.insertCursorAbove",
    "when": "editorTextFocus"
  },
  
  // ================================
  // Code Quality & Formatting
  // ================================
  
  // Format Document with Prettier
  {
    "key": "ctrl+shift+i",
    "command": "editor.action.formatDocument",
    "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
  },
  
  // ESLint Fix All
  {
    "key": "ctrl+shift+e",
    "command": "eslint.executeAutofix",
    "when": "editorTextFocus && !editorReadonly"
  },
  
  // ================================
  // Testing & Debugging
  // ================================
  
  // Run Current Test File
  {
    "key": "ctrl+shift+r",
    "command": "vitest.runCurrentFile",
    "when": "editorTextFocus"
  },
  
  // Debug Current File
  {
    "key": "f5",
    "command": "workbench.action.debug.start",
    "when": "debuggersAvailable && debugState == 'inactive'"
  },
  
  // ================================
  // Workspace Management
  // ================================
  
  // Toggle Sidebar
  {
    "key": "ctrl+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  
  // Toggle Terminal
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  
  // Focus Terminal
  {
    "key": "ctrl+shift+`",
    "command": "workbench.action.terminal.focus"
  },
  
  // ================================
  // Extension-Specific Shortcuts
  // ================================
  
  // GitLens
  {
    "key": "ctrl+shift+g l",
    "command": "gitlens.toggleFileBlame",
    "when": "editorTextFocus && gitlens:activeFileStatus =~ /blameable/"
  },
  
  // Todo Tree
  {
    "key": "ctrl+shift+todo",
    "command": "todo-tree-view.focus"
  },
  
  // Task Explorer
  {
    "key": "ctrl+shift+task",
    "command": "taskExplorer.focus"
  },
  
  // ================================
  // File Management
  // ================================
  
  // New File in Current Directory
  {
    "key": "ctrl+alt+n",
    "command": "explorer.newFile"
  },
  
  // New Folder in Current Directory
  {
    "key": "ctrl+alt+shift+n",
    "command": "explorer.newFolder"
  },
  
  // Duplicate Current File
  {
    "key": "ctrl+shift+d",
    "command": "fileutils.duplicateFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
  },
  
  // ================================
  // Advanced Terminal Features
  // ================================
  
  // Clear Terminal
  {
    "key": "ctrl+k",
    "command": "workbench.action.terminal.clear",
    "when": "terminalFocus"
  },
  
  // Kill All Terminals
  {
    "key": "ctrl+shift+alt+k",
    "command": "workbench.action.terminal.killAll"
  },
  
  // Split Terminal Right
  {
    "key": "ctrl+shift+\\",
    "command": "workbench.action.terminal.splitInActiveWorkspace"
  },
  
  // Navigate Between Terminal Tabs
  {
    "key": "ctrl+pagedown",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+pageup",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  }
]
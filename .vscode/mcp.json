{
	"inputs": [
		{
			"id": "figma-api-token",
			"type": "promptString",
			"password": true,
			"description": "Figma Personal Access Token für Design-zu-Code Generation"
		},
		{
			"id": "ado_org",
			"type": "promptString",
			"description": "Azure DevOps organization name (e.g., contoso).",
			"password": false
		},
		{
			"id": "ado_domain",
			"type": "promptString",
			"description": "Repeat to enable specific domains: core, work, work-items, search, test-plans, repositories, wiki, pipelines, advanced-security.",
			"password": false
		},
		{
			"id": "kusto_service_uri",
			"type": "promptString",
			"description": "Default Kusto cluster URI (e.g., https://help.kusto.windows.net/ or your cluster).",
			"password": false
		},
		{
			"id": "kusto_default_db",
			"type": "promptString",
			"description": "Default database name for Kusto queries (e.g., Samples).",
			"password": false
		},
		{
			"id": "az_openai_embedding_endpoint",
			"type": "promptString",
			"description": "Azure OpenAI embeddings endpoint for shots/semantic search (format: https://<resource>.openai.azure.com/openai/deployments/<name>/embeddings?api-version=<version>;impersonate).",
			"password": false
		},
		{
			"id": "kusto_known_services_json",
			"type": "promptString",
			"description": "JSON array of preconfigured Kusto services (e.g., [{\"service_uri\":\"https://cluster.kusto.windows.net\",\"default_database\":\"DB\"}]).",
			"password": false
		},
		{
			"id": "kusto_eager_connect",
			"type": "promptString",
			"description": "Whether to eagerly connect to the default service on startup (true/false).",
			"password": false
		},
		{
			"id": "kusto_allow_unknown_services",
			"type": "promptString",
			"description": "Allow connections to services not listed in KUSTO_KNOWN_SERVICES (true/false).",
			"password": false
		},
		{
			"id": "fabric_api_base",
			"type": "promptString",
			"description": "Base URL for Fabric APIs (default https://api.fabric.microsoft.com/v1).",
			"password": false
		},
		{
			"id": "clarity_api_token",
			"type": "promptString",
			"description": "Microsoft Clarity Data Export API token (generate in Clarity: Settings → Data Export).",
			"password": true
		}
	],
	"servers": {
		"figma": {
			"name": "Figma",
			"type": "http",
			"url": "http://127.0.0.1:3845/mcp",
			"env": {
				"FIGMA_API_TOKEN": "${input:figma-api-token}",
				"FIGMA_FILE_KEY": "mTlUSy9BQk4326cvwNa8zQ"
			},
			"version": "1.0.0",
			"description": "Lokaler Figma-MCP-Server (Desktop/Bridge) – Design-zu-Code & Assets",
			"metadata": {
				"projectName": "Menschlichkeit Österreich - Website Design System",
				"designTokens": "figma-design-system/00_design-tokens.json",
				"syncCommand": "npm run figma:sync",
				"frameworks": [
					"react",
					"tailwind",
					"typescript"
				],
				"languages": [
					"typescript",
					"javascript",
					"css"
				],
				"supportedOutputs": [
					"jsx",
					"tsx",
					"css",
					"scss"
				],
				"qualityGates": [
					"codacy",
					"accessibility",
					"dsgvo"
				],
				"defaultAssetDir": "frontend/public/figma-assets"
			}
		},
		"github": {
			"name": "GitHub",
			"type": "http",
			"url": "https://api.githubcopilot.com/mcp/",
			"gallery": "https://api.mcp.github.com/2025-09-15",
			"version": "0.13.0",
			"description": "GitHub Copilot MCP – Issues, PRs, Repositories, Security",
			"metadata": {
				"repository": "peschull/menschlichkeit-oesterreich-development",
				"branch": "main"
			}
		},
		"memory": {
			"name": "Memory",
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-memory"
			],
			"version": "1.0.0",
			"description": "Persistenter Konversationsspeicher (Knowledge Memory)",
			"metadata": {
				"description": "Session-persistenter Speicher für Multi-Turn-Conversations"
			}
		},
		"filesystem": {
			"name": "Filesystem",
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-filesystem",
				"${workspaceFolder}"
			],
			"version": "1.0.0",
			"description": "Lokale Dateisystem-Operationen (sicher, scoped auf Workspace)",
			"metadata": {
				"description": "Workspace Dateisystem-Zugriff für Code-Generierung"
			}
		},
		"TalkToFigma": {
			"name": "TalkToFigma",
			"type": "stdio",
			"command": "npx",
			"args": [
				"@sethdouglasford/mcp-figma@1.0.9"
			],
			"version": "1.0.9",
			"description": "Figma-Integration (TalkToFigma) – explorative Designabfragen"
		},
		"microsoft/markitdown": {
			"name": "MarkItDown",
			"type": "stdio",
			"command": "node",
			"args": [
				"scripts/mcp/uvx-stdio.mjs",
				"markitdown-mcp==0.0.1a4"
			],
			"gallery": "https://api.mcp.github.com/2025-09-15",
			"version": "1.0.0",
			"description": "Konvertiert Dateien (PDF/Office/Bilder) zu Markdown"
		},
		"microsoft/playwright-mcp": {
			"name": "Playwright",
			"type": "stdio",
			"command": "npx",
			"args": [
				"@playwright/mcp@latest"
			],
			"gallery": "https://api.mcp.github.com/2025-09-15",
			"version": "0.0.1-seed",
			"description": "Browser-Automatisierung und UI-Interaktion"
		},
		"microsoftdocs/mcp": {
			"name": "MicrosoftDocs",
			"type": "http",
			"url": "https://learn.microsoft.com/api/mcp",
			"gallery": "https://api.mcp.github.com/2025-09-15",
			"version": "1.0.0",
			"description": "Offizielle Microsoft Learn Dokumentation (Search/Fetch)"
		},
		"microsoft/clarity-mcp-server": {
			"name": "Clarity",
			"type": "stdio",
			"command": "npx",
			"args": [
				"@microsoft/clarity-mcp-server@latest",
				"--clarity_api_token",
				"${input:clarity_api_token}"
			],
			"gallery": "https://api.mcp.github.com/2025-09-15",
			"version": "1.0.0",
			"description": "Microsoft Clarity Analytics (Data Export API)"
		},
		"microsoft/devbox-mcp-server": {
			"name": "DevBox",
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@microsoft/devbox-mcp@latest"
			],
			"gallery": "https://api.mcp.github.com/2025-09-15",
			"version": "1.0.0",
			"description": "Azure Dev Box – Projekte, Pools, DevBoxes verwalten"
		}
	}
}

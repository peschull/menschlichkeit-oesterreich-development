{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PHP: Xdebug Listen (9003)",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "log": false,
      "xdebugSettings": {
        "max_children": 256,
        "max_data": 512,
        "max_depth": 5
      },
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}/crm.menschlichkeit-oesterreich.at/httpdocs"
      }
    },

    {
      "name": "Node: Attach (9229)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    },
    {
      "name": "Python: FastAPI (uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8001",
        "--reload"
      ],
      "cwd": "${workspaceFolder}/api.menschlichkeit-oesterreich.at",
      "envFile": "${workspaceFolder}/api.menschlichkeit-oesterreich.at/.env",
      "jinja": true,
      "console": "integratedTerminal"
    },

    {
      "name": "Chrome: Democracy Games @ localhost:3000",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/games/",
      "webRoot": "${workspaceFolder}/web/games",
      "sourceMaps": true,
      "skipFiles": ["**/node_modules/**"]
    },

    {
      "name": "Chrome: CRM Drupal @ localhost:8000",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}/crm.menschlichkeit-oesterreich.at/httpdocs",
      "sourceMaps": true
    },

    {
      "name": "Next.js: Server (Attach 9229)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**", "**/.next/**"]
    },

    {
      "name": "Next.js: Browser @ localhost:3000",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true,
      "skipFiles": ["**/node_modules/**"]
    },

    {
      "name": "Vitest: Unit Tests (Debug)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["vitest", "--inspect-brk", "--threads=false", "--run"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true
    },

    {
      "name": "Playwright: E2E Tests (Debug)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["playwright", "test", "--headed", "--debug"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },

    {
      "name": "Docker: Node Attach",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    }
  ],

  "compounds": [
    {
      "name": "üöÄ Full-Stack: Drupal + Games + API",
      "configurations": ["PHP: Xdebug Listen (9003)", "Chrome: Democracy Games @ localhost:3000", "Node: Attach (9229)"]
    },
    {
      "name": "üéÆ Game Development: Browser + Node",
      "configurations": ["Chrome: Democracy Games @ localhost:3000", "Node: Attach (9229)"]
    },
    {
      "name": "üèõÔ∏è CMS Development: Drupal + Browser",
      "configurations": ["PHP: Xdebug Listen (9003)", "Chrome: CRM Drupal @ localhost:8000"]
    },
    {
      "name": "‚öõÔ∏è Frontend (Next.js): Server + Browser",
      "configurations": ["Next.js: Server (Attach 9229)", "Next.js: Browser @ localhost:3000"]
    },
    {
      "name": "üß™ Testing Suite: Unit + E2E",
      "configurations": ["Vitest: Unit Tests (Debug)", "Playwright: E2E Tests (Debug)"]
    }
  ]
}

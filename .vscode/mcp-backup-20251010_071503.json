{
  "servers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${workspaceFolder}"
      ]
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "notion": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@notionhq/notion-mcp-server"
      ],
      "env": {
        "NOTION_API_KEY": "${env:NOTION_API_KEY}"
      }
    },
    "figma": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "figma-mcp"
      ],
      "env": {
        "FIGMA_FILE_KEY": "${env:FIGMA_FILE_KEY}"
      }
    },
    "postgres": {
      "type": "stdio",
      "command": "bash",
      "args": [
        "scripts/run-postgres-mcp.sh"
      ],
      "env": {
        "DATABASE_URL": "${env:DATABASE_URL}"
      }
    },
    "upstash-context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "codacy-mcp-server": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@codacy/codacy-mcp@latest"
      ],
      "env": {
        "CODACY_ACCOUNT_TOKEN": "${env:CODACY_ACCOUNT_TOKEN}"
      }
    },
    "moe-chat": {
      "type": "stdio",
      "command": "node",
      "args": [
        "mcp-servers/chatgpt-app-server/index.js"
      ],
      "env": {
        "MOE_API_BASE": "http://localhost:8001/api/v1"
      }
    },
    "markitdown": {
      "type": "stdio",
      "command": "bash",
      "args": [
        "scripts/run-markitdown-mcp.sh"
      ]
    },
    "github-mcp": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "playwright-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "microsoft-docs": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    }
  }
}
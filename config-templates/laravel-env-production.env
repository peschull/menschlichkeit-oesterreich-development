# Laravel .env Configuration OHNE WordPress - mo_laravel_api @ digimagical.com
# PRIMARY SYSTEM - Produktions-Konfiguration für api.menschlichkeit-oesterreich.at

APP_NAME="Menschlichkeit Österreich API"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://api.menschlichkeit-oesterreich.at

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration - MariaDB 10.6.22 @ digimagical.com
# Dedicated laravel_user (NICHT mo_wp_user)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=mo_laravel_api
DB_USERNAME=laravel_user
DB_PASSWORD=SECURE_LARAVEL_2025
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Database Performance Settings
DB_SOCKET=
DB_SSL_MODE=disabled
DB_SSL_CERT=
DB_SSL_KEY=
DB_SSL_CA=

# Redis Cache (falls verfügbar auf Plesk)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis Configuration (optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Plesk SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.menschlichkeit-oesterreich.at
MAIL_PORT=587
MAIL_USERNAME=api@menschlichkeit-oesterreich.at
MAIL_PASSWORD=MAIL_PASSWORD_HERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="api@menschlichkeit-oesterreich.at"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (falls S3 für File Storage verwendet wird)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (falls Real-time Features benötigt)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=eu

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# Security Settings
BCRYPT_ROUNDS=12
HASH_VERIFY=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://menschlichkeit-oesterreich.at,https://www.menschlichkeit-oesterreich.at
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Plesk-spezifische Konfiguration
SERVER_SOFTWARE=nginx/1.28.0
PHP_VERSION=8.4.11
DB_SERVER=MariaDB 10.6.22
HOSTING_PROVIDER=digimagical.com

# Performance & Caching
OPCACHE_ENABLE=true
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Monitoring & Logging
LOG_QUERIES=false
LOG_SLOW_QUERIES=true
SLOW_QUERY_TIME=2000

# Backup & Maintenance
BACKUP_ENABLED=true
MAINTENANCE_MODE=false
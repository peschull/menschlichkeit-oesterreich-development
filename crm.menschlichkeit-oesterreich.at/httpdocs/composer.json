{
  "name": "menschlichkeit/crm-system",
  "description": "CiviCRM System for Menschlichkeit Ã–sterreich - Plesk Compatible",
  "type": "project",
  "license": "GPL-3.0+",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "drupal/core-composer-scaffold": true,
      "drupal/core-project-message": true,
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "civicrm/civicrm-asset-plugin": true,
      "civicrm/composer-compile-plugin": true
    },
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "php": ">=8.2",
    "composer/installers": "^2.0",
    "drupal/core-composer-scaffold": "^10.1",
    "drupal/core-project-message": "^10.1",
    "drupal/core-recommended": "^10.1",
    "drush/drush": "^12.0",
    "civicrm/civicrm-core": "^5.66",
    "civicrm/civicrm-packages": "^5.66",
    "civicrm/civicrm-drupal-8": "^5.66",
    "civicrm/civicrm-asset-plugin": "^1.1",
    "civicrm/composer-compile-plugin": "^0.21"
  },
  "require-dev": {
    "drupal/core-dev": "^10.1",
    "civicrm/cv": "^0.3"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "extra": {
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      },
      "allowed-packages": [
        "drupal/core"
      ],
      "file-mapping": {
        "[web-root]/sites/development.services.yml": false
      }
    },
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/Commands/contrib/{$name}": [
        "type:drupal-drush"
      ],
      "web/modules/custom/{$name}": [
        "type:drupal-custom-module"
      ],
      "web/profiles/custom/{$name}": [
        "type:drupal-custom-profile"
      ],
      "web/themes/custom/{$name}": [
        "type:drupal-custom-theme"
      ]
    },
    "enable-patching": true
  },
  "scripts": {
    "pre-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "post-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ]
  }
}

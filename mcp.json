{
  "version": "1",
  "servers": {
    "filesystem": {
      "command": "bash",
      "args": {
        "script": "scripts/mcp/wrapper-filesystem.sh"
      }
    },
    "git": {
      "command": "git",
      "args": {}
    },
    "docker": {
      "command": "docker",
      "args": {}
    },
    "codacy-cli": {
      "command": "bash",
      "args": {
        "script": "scripts/codacy/codacy-cli.sh",
        "mode": "analyze",
        "output": "quality-reports/codacy-analysis.json",
        "format": "json",
        "path": "${workspaceFolder}"
      }
    },
    "prisma": {
      "command": "prisma",
      "args": {
        "schema": "schema.prisma",
        "generate": true
      }
    },
    "lighthouse": {
      "command": "lighthouse-ci",
      "args": {
        "config": "lighthouse.config.cjs",
        "budgets-path": "frontend/lighthouse-budgets.json"
      }
    },
    "trivy-security": {
      "command": "trivy",
      "args": {
        "config": "trivy.yaml",
        "format": "sarif",
        "output": "quality-reports/security-findings.sarif"
      }
    },
    "n8n-webhook": {
      "command": "node",
      "args": {
        "script": "automation/n8n/webhook-client.js",
        "environment": "development"
      }
    },
    "build-pipeline": {
      "command": "bash",
      "args": {
        "script": "./build-pipeline.sh",
        "dry-run": true
      }
    },
    "plesk-deploy": {
      "command": "bash",
      "args": {
        "script": "./scripts/safe-deploy.sh",
        "mode": "dry-run"
      }
    },
    "quality-reporter": {
      "command": "node",
      "args": {
        "script": "scripts/generate-quality-report.js",
        "output-dir": "quality-reports"
      }
    },
    "figma": {
      "command": "node",
      "args": {
        "script": "scripts/figma-token-sync.cjs",
        "mode": "sync"
      }
    },
    "github-cli": {
      "command": "node",
      "args": {
        "script": "scripts/validate-github-files.py",
        "mode": "issues"
      }
    },
    "memory": {
      "command": "bash",
      "args": {
        "script": "scripts/mcp/wrapper-memory.sh"
      }
    },
    "sequential-thinking": {
      "command": "bash",
      "args": {
        "script": "scripts/mcp/wrapper-sequential-thinking.sh"
      }
    },
    "context7": {
      "command": "bash",
      "args": {
        "script": "scripts/mcp/wrapper-context7.sh"
      }
    },
    "gitleaks": {
      "command": "gitleaks",
      "args": {
        "config": "gitleaks.toml",
        "report": "quality-reports/gitleaks-report.json"
      }
    },
    "pii-sanitizer-test": {
      "command": "pytest",
      "args": {
        "file": "tests/test_pii_sanitizer.py",
        "output": "quality-reports/pii-sanitizer-test.txt"
      }
    },
    "design-tokens-validate": {
      "command": "node",
      "args": {
        "script": "scripts/validate-design-tokens.js",
        "tokens": "figma-design-system/00_design-tokens.json"
      }
    }
  }
}

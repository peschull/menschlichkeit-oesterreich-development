{
  "name": "menschlichkeit-oesterreich/php-development-tools",
  "description": "PHP development tools for Menschlichkeit Ã–sterreich workspace",
  "type": "project",
  "require-dev": {
    "phpstan/phpstan": "^1.12",
    "phpstan/phpstan-symfony": "^1.4",
    "friendsofphp/php-cs-fixer": "^3.64",
    "squizlabs/php_codesniffer": "^3.10",
    "phpunit/phpunit": "^11.5",
    "symfony/console": "^7.2",
    "laravel/framework": "^12.30"
  },
  "autoload": {
    "psr-4": {
      "MenschlichkeitOesterreich\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MenschlichkeitOesterreich\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "stan": "phpstan analyse",
    "stan:clear": "phpstan clear-result-cache",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "phpcs": "phpcs --standard=PSR12 --extensions=php",
    "phpcbf": "phpcbf --standard=PSR12 --extensions=php",
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "quality": [
      "@cs:check",
      "@stan",
      "@phpcs"
    ],
    "fix": [
      "@cs:fix",
      "@phpcbf"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "symfony/flex": true
    },
    "disable-tls": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "7.2.*"
    }
  }
}

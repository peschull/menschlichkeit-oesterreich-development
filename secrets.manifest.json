{
"repository": "peschull/menschlichkeit-oesterreich-development",
"organization": "peschull",
"environments": [
 { "name": "dev" },
 { "name": "stage" },
 { "name": "prod", "reviewers": { "teams": ["secops"], "users": ["peschull"] }, "wait_timer": 0 }
],
"secrets": [
 {
   "name": "STRIPE_SECRET",
   "scopes": ["repo", "env:prod"],
   "source": { "type": "file", "path": "secrets/STRIPE_SECRET.txt" },
   "rotate_days": 90,
   "required": true
 },
 {
   "name": "DB_PASSWORD",
   "scopes": ["env:dev", "env:stage", "env:prod"],
   "source": { "type": "env", "key": "DB_PASSWORD" },
   "rotate_days": 180,
   "required": true
 },
 {
   "name": "API_KEY",
   "scopes": ["org"],
   "org_visibility": "private",
   "org_selected_repos": ["menschlichkeit-oesterreich-development"],
   "source": { "type": "prompt" },
   "rotate_days": 180,
   "required": true
 }
]
}
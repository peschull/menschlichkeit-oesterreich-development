{
  "name": "workspace-development-tools",
  "version": "1.0.0",
  "description": "Development tools for Menschlichkeit Österreich workspace",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "website",
    "mcp-servers/*",
    "servers",
    "mcp-bridge",
    "mcp-search"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "build:all": "npm run build --workspaces",
    "test:all": "npm run test --workspaces",
    "lint:js": "eslint **/*.{js,ts} --fix",
    "lint:md": "markdownlint **/*.md --fix",
    "format": "prettier --write **/*.{js,ts,json,md}",
    "format:php": "composer exec php-cs-fixer fix",
    "lint:php": "composer exec phpstan analyse",
    "setup:dev": "npm run install:all && npm run setup:composer",
    "setup:composer": "composer install --no-dev --optimize-autoloader",
    "clean": "npm run clean:dist && npm run clean:node-modules",
    "clean:dist": "find . -name 'dist' -type d -exec rm -rf {} +",
    "clean:node-modules": "find . -name 'node_modules' -type d -exec rm -rf {} +",
    "dev:essential": "npm run dev --workspace=mcp-servers/essential-stack",
    "dev:web": "npm run dev --workspace=mcp-servers/web-stack",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "lh:website": "npm run lh:ci --workspace=website",
    "lint": "eslint .",
    "lint:sarif": "eslint . -f sarif -o eslint.sarif || true"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "markdownlint-cli": "^0.43.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "globals": "^15.12.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "development-tools",
    "linting",
    "formatting",
    "austria",
    "non-profit"
  ],
  "author": "Menschlichkeit Österreich",
  "license": "MIT"
}

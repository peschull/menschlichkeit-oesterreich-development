{
  "packageManager": "npm@10.2.4",
  "name": "workspace-development-tools",
  "version": "1.0.0",
  "description": "Development tools for Menschlichkeit Österreich workspace",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "website",
    "mcp-servers/*",
    "packages/*",
    "servers",
    "mcp-bridge",
    "mcp-search",
    "automation/n8n"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "build:workspaces": "npm run build --workspaces",
    "test:all": "npm run test --workspaces",
    "test:mcp": "npm run test --workspace=mcp-servers/file-server",
    "lint:js": "eslint **/*.{js,ts} --fix",
    "lint:md": "markdownlint **/*.md --fix",
    "format": "prettier --write **/*.{js,ts,json,md}",
    "format:php": "composer exec php-cs-fixer fix",
    "lint:php": "composer exec phpstan analyse",
    "setup:dev": "npm run install:all && npm run setup:composer && npm run setup:environments",
    "setup:composer": "composer install --no-dev --optimize-autoloader",
    "setup:environments": "pwsh scripts/setup-environments.ps1",
    "clean": "node scripts/clean-workspace.mjs",
    "clean:dry-run": "node scripts/clean-workspace.mjs --dry-run",
    "clean:dist": "node scripts/clean-workspace.mjs --only=dist,build",
    "clean:node-modules": "node scripts/clean-workspace.mjs --only=node_modules",
    "dev:all": "concurrently \"npm run dev:crm\" \"npm run dev:api\" \"npm run dev:frontend\" \"npm run dev:games\"",
    "dev:crm": "cd crm.menschlichkeit-oesterreich.at && php -S localhost:8000 -t httpdocs",
    "dev:api": "bash scripts/start-api-dev.sh",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:games": "cd web && python -m http.server 3000",
    "dev:essential": "npm run dev --workspace=mcp-servers/essential-stack",
    "dev:web": "npm run dev --workspace=mcp-servers/web-stack",
    "build:all": "npm run build:frontend && npm run build:games && npm run build:api",
    "turbo:lint": "turbo run lint",
    "turbo:test": "turbo run test",
    "turbo:build": "turbo run build",
    "turbo:affected:lint": "turbo run lint --filter=...[HEAD]",
    "turbo:affected:test": "turbo run test --filter=...[HEAD]",
    "turbo:affected:build": "turbo run build --filter=...[HEAD]",
    "build:frontend": "npm run build --workspace=frontend",
    "build:games": "pwsh scripts/build-games.ps1",
    "build:api": "cd api.menschlichkeit-oesterreich.at && python -m build",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "test:e2e": "npm run test:integration",
    "deploy:all": "npm run deploy:crm && npm run deploy:api && npm run deploy:frontend",
    "deploy:crm": "pwsh scripts/deploy-crm.ps1",
    "deploy:api": "pwsh scripts/deploy-api.ps1",
    "deploy:frontend": "pwsh scripts/deploy-frontend.ps1",
    "lh:website": "npm run lh:ci --workspace=website",
    "lint": "eslint .",
    "lint:sarif": "eslint . -f sarif -o eslint.sarif || true",
    "lint:all": "npm run lint:js && npm run lint:php && npm run lint:md",
    "format:all": "npm run format && npm run format:php",
    "tools:codacy:ensure": "bash scripts/setup/ensure-codacy-cli.sh",
    "quality:codacy": "bash scripts/quality/run-codacy-or-eslint.sh",
    "setup:codacy": "bash scripts/install-codacy-cli.sh",
    "security:trivy": "trivy fs --format sarif --output quality-reports/trivy-security.sarif . || true",
    "security:scan": "npm run security:trivy && gitleaks detect --no-git --redact --config .gitleaks.toml --report-path quality-reports/private/secrets-scan.json --report-format json || true",
    "security:scan:history": "bash scripts/security/gitleaks-history-scan.sh",
    "performance:lighthouse": "bash scripts/run-lhci.sh",
    "compliance:dsgvo": "bash -lc 'if command -v pwsh >/dev/null 2>&1; then pwsh scripts/dsgvo-check.ps1; else echo \"[dsgvo] PowerShell not available – skipping.\"; fi'",
    "quality:reports": "node scripts/generate-quality-report.js",
    "quality:gates": "npm run quality:codacy && npm run security:scan && npm run performance:lighthouse && npm run compliance:dsgvo && npm run quality:reports",
    "quality:gates:full": "npm run quality:codacy && npm run security:scan:history && npm run performance:lighthouse && npm run compliance:dsgvo && npm run quality:reports",
    "setup:browsers": "bash scripts/setup/install-browsers.sh",
    "quality:codacy:docker": "bash scripts/codacy-cli-docker.sh",
    "logs:purge": "python3 scripts/purge-logs.py",
    "logs:purge:dry-run": "python3 scripts/purge-logs.py --dry-run --verbose",
    "figma:sync": "node scripts/figma-token-sync.cjs",
    "figma:validate": "node scripts/validate-design-tokens.js",
    "figma:sync:watch": "nodemon --watch figma-design-system scripts/figma-token-sync.cjs",
    "design:tokens": "npm run figma:sync && npm run build:frontend",
    "design:docs": "storybook build && npm run figma:sync",
    "design:export:tokensstudio": "node scripts/export-tokens-tokensstudio.mjs",
    "n8n:start": "cd automation/n8n && docker-compose up -d",
    "n8n:stop": "cd automation/n8n && docker-compose down",
    "n8n:logs": "cd automation/n8n && docker-compose logs -f n8n",
    "n8n:restart": "npm run n8n:stop && npm run n8n:start",
    "n8n:webhook": "node automation/n8n/webhook-client.js",
    "n8n:setup": "cd automation/n8n && cp .env.example .env && echo 'Please configure automation/n8n/.env with your settings'",
    "n8n:smoke": "python3 automation/n8n/smoke-test.py",
    "docs:adr-index": "node scripts/docs/generate-adr-index.mjs",
    "figma:filekey": "node scripts/figma-extract-filekey.mjs",
    "figma:nodeid": "node scripts/figma-extract-nodeid.mjs",
    "db:start": "docker-compose -f docker-compose-databases.yml up -d",
    "db:stop": "docker-compose -f docker-compose-databases.yml down",
    "db:restart": "npm run db:stop && npm run db:start",
    "db:logs": "docker-compose -f docker-compose-databases.yml logs -f",
    "db:logs:mariadb": "docker logs mo_mariadb -f",
    "db:logs:postgres": "docker logs mo_postgres -f",
    "db:status": "docker ps --filter 'name=mo_' --format 'table {{.Names}}\\t{{.Status}}\\t{{.Ports}}'",
    "db:shell:mariadb": "docker exec -it mo_mariadb mysql -uroot -pSecureRootPass2024!",
    "db:shell:postgres": "docker exec -it mo_postgres psql -U postgres",
    "db:backup:mariadb": "docker exec mo_mariadb mysqldump -uroot -pSecureRootPass2024! --all-databases > backups/mariadb-backup-$(date +%Y%m%d-%H%M%S).sql",
    "db:backup:postgres": "docker exec mo_postgres pg_dumpall -U postgres > backups/postgres-backup-$(date +%Y%m%d-%H%M%S).sql",
    "db:cleanup": "docker system prune -f && docker volume prune -f",
    "db:reset": "docker-compose -f docker-compose-databases.yml down -v && npm run db:start"
  },
  "scriptsPhase0": {
    "verify": "bash analysis/phase-0/verification/verify-phase-0.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.55.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "fast-check": "^3.23.2",
    "globals": "^15.12.0",
    "jest": "^30.2.0",
    "jsdom": "^27.0.0",
    "jsdom-global": "^3.0.2",
    "markdownlint-cli": "^0.43.0",
    "n8n-workflow": "^1.17.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.4.4",
    "turbo": "2.5.8",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "overrides": {
    "minimatch": "^9.0.5",
    "glob-parent": "^6.0.2"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "development-tools",
    "linting",
    "formatting",
    "austria",
    "non-profit"
  ],
  "author": "Menschlichkeit Österreich",
  "license": "MIT",
  "dependencies": {
    "vite": "7.1.9"
  }
}

{
  "policy": "operational-retention-30d",
  "phases": {
    "hot": {
      "min_age": "0ms",
      "actions": {
        "rollover": {
          "max_age": "1d",
          "max_primary_shard_size": "50gb"
        },
        "set_priority": {
          "priority": 100
        }
      }
    },
    "delete": {
      "min_age": "30d",
      "actions": {
        "delete": {
          "delete_searchable_snapshot": true
        }
      }
    }
  },
  "_meta": {
    "description": "ILM policy for operational logs (30-day retention)",
    "version": "1.0.0",
    "managed_by": "F-03 Phase 4 - Centralized Log Aggregation"
  }
}

{
  "policy": "compliance-retention-1y",
  "phases": {
    "hot": {
      "min_age": "0ms",
      "actions": {
        "rollover": {
          "max_age": "1d",
          "max_primary_shard_size": "50gb"
        },
        "set_priority": {
          "priority": 100
        }
      }
    },
    "warm": {
      "min_age": "7d",
      "actions": {
        "set_priority": {
          "priority": 50
        },
        "allocate": {
          "number_of_replicas": 1
        },
        "forcemerge": {
          "max_num_segments": 1
        }
      }
    },
    "cold": {
      "min_age": "30d",
      "actions": {
        "set_priority": {
          "priority": 0
        },
        "searchable_snapshot": {
          "snapshot_repository": "compliance_backups"
        }
      }
    },
    "delete": {
      "min_age": "365d",
      "actions": {
        "delete": {
          "delete_searchable_snapshot": true
        }
      }
    }
  },
  "_meta": {
    "description": "ILM policy for DSGVO compliance logs (1-year retention)",
    "version": "1.0.0",
    "managed_by": "F-03 Phase 4 - Centralized Log Aggregation",
    "compliance": {
      "gdpr_article": "Article 5(1)(e) - Storage Limitation",
      "retention_period": "365 days",
      "lifecycle": {
        "hot": "0-7 days (active indexing)",
        "warm": "7-30 days (reduce replicas, force merge)",
        "cold": "30-365 days (searchable snapshots)",
        "delete": "After 365 days (permanent deletion)"
      }
    }
  }
}

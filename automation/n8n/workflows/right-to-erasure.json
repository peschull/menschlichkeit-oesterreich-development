            {
              "name": "event",
              "value": "right_to_erasure"
            },
            {
              "name": "request_id",
              "value": "={{ $json.requestId }}"
            },
            {
              "name": "subject_email",
              "value": "={{ $json.subjectEmail }}"
            },
            {
              "name": "mode",
              "value": "={{ $json.mode || 'external_orchestrated' }}"
            },
            {
              "name": "scope",
              "value": "={{ $json.scope || 'full' }}"
            }
          ],
          "json": [
            {
              "name": "metadata",
              "value": "={{ $json.metadata || {} }}"
            },
            {
              "name": "memberships_removed",
              "value": "={{ $json.memberships_removed || [] }}"
            }
          ]
        },
        "options": {
          "setAllData": false
        }
      },
      "id": "prepare-audit",
      "name": "Prepare Audit Payload",
      "type": "n8n-nodes-base.set",
      "typeVersion": 2,
      "position": [780, 280]
    },
    {
      "parameters": {
        "additionalFields": {},
        "responseBody": "={{ { \"status\": 'accepted', \"request_id\": $json.request_id } }}",
        "responseCode": 202
      },
      "id": "respond",

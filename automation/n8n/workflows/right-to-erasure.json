{
  "name": "GDPR Right to Erasure Audit",
  "active": false,
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "right-to-erasure",
        "responseMode": "lastNode",
        "options": {
          "binaryData": false,
          "responseContentType": "application/json"
        }
      },
      "id": "webhook-erasure",
      "name": "Webhook - Erasure Intake",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [220, 280],
      "webhookId": "moe-gdpr-right-to-erasure"
    },
    {
      "parameters": {
        "functionCode": "const crypto = require('crypto');\nconst secret = $env.N8N_WEBHOOK_SECRET || '';\nif (!secret) {\n  return items;\n}\nconst incoming = $headers['x-webhook-signature'];\nconst payload = JSON.stringify(items[0].json);\nconst expected = crypto\n  .createHmac('sha256', secret)\n  .update(payload)\n  .digest('hex');\nif (!incoming || incoming !== expected) {\n  throw new Error('Invalid webhook signature');\n}\nreturn items;"
      },
      "id": "validate-signature",
      "name": "Validate Signature",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [500, 280]
    },
    {
      "parameters": {

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Admin Portal Design Tokens Extension",
  "description": "Erweiterte Design Tokens f√ºr Next.js Admin Portal mit Dashboard-spezifischen Komponenten",
  "version": "1.0.0",
  "lastUpdate": "2025-10-03T17:30:00Z",

  "adminTokens": {
    "dashboard": {
      "widgets": {
        "card": {
          "background": "var(--semantic-surface, #f8fafc)",
          "border": "var(--semantic-border, #e2e8f0)",
          "borderRadius": "var(--border-radius-lg, 0.5rem)",
          "padding": "var(--spacing-6, 1.5rem)",
          "shadow": "var(--shadow-md)",
          "hover": {
            "shadow": "var(--shadow-lg)",
            "borderColor": "var(--brand-primary, #c8102e)"
          }
        },
        "kpi": {
          "fontSize": {
            "value": "var(--font-size-3xl, 1.875rem)",
            "label": "var(--font-size-sm, 0.875rem)"
          },
          "fontWeight": {
            "value": "var(--font-weight-bold, 700)",
            "label": "var(--font-weight-medium, 500)"
          },
          "colors": {
            "positive": "var(--colors-success-600, #16a34a)",
            "negative": "var(--colors-error-600, #dc2626)",
            "neutral": "var(--semantic-text-secondary, #64748b)"
          }
        }
      },

      "sidebar": {
        "width": {
          "expanded": "16rem",
          "collapsed": "4rem"
        },
        "background": "var(--semantic-surface, #f8fafc)",
        "border": "1px solid var(--semantic-border, #e2e8f0)",
        "item": {
          "padding": "var(--spacing-3, 0.75rem) var(--spacing-4, 1rem)",
          "borderRadius": "var(--border-radius-md, 0.375rem)",
          "hover": {
            "background": "var(--colors-primary-50, #f0f9ff)"
          },
          "active": {
            "background": "var(--brand-primary, #c8102e)",
            "color": "var(--semantic-text-inverse, #ffffff)",
            "fontWeight": "var(--font-weight-semibold, 600)"
          }
        }
      },

      "topbar": {
        "height": "4rem",
        "background": "var(--semantic-background, #ffffff)",
        "border": "1px solid var(--semantic-border, #e2e8f0)",
        "shadow": "var(--shadow-sm)",
        "zIndex": "var(--z-index-sticky, 1100)"
      }
    },

    "dataTable": {
      "row": {
        "height": "3rem",
        "padding": "var(--spacing-4, 1rem)",
        "borderBottom": "1px solid var(--semantic-border, #e2e8f0)",
        "hover": {
          "background": "var(--colors-primary-50, #f0f9ff)"
        }
      },
      "header": {
        "background": "var(--semantic-surface, #f8fafc)",
        "fontWeight": "var(--font-weight-semibold, 600)",
        "fontSize": "var(--font-size-sm, 0.875rem)",
        "textTransform": "uppercase",
        "letterSpacing": "var(--letter-spacing-wide, 0.025em)"
      },
      "cell": {
        "padding": "var(--spacing-3, 0.75rem) var(--spacing-4, 1rem)",
        "fontSize": "var(--font-size-sm, 0.875rem)"
      }
    },

    "forms": {
      "input": {
        "height": "2.5rem",
        "padding": "var(--spacing-2, 0.5rem) var(--spacing-3, 0.75rem)",
        "borderRadius": "var(--border-radius-md, 0.375rem)",
        "border": "1px solid var(--semantic-border, #e2e8f0)",
        "fontSize": "var(--font-size-sm, 0.875rem)",
        "focus": {
          "borderColor": "var(--semantic-border-focus, #0ea5e9)",
          "outline": "2px solid var(--colors-primary-200, #bae6fd)",
          "outlineOffset": "2px"
        },
        "error": {
          "borderColor": "var(--colors-error-500, #ef4444)",
          "outline": "2px solid var(--colors-error-200, #fecaca)"
        }
      },
      "label": {
        "fontSize": "var(--font-size-sm, 0.875rem)",
        "fontWeight": "var(--font-weight-medium, 500)",
        "marginBottom": "var(--spacing-2, 0.5rem)",
        "color": "var(--semantic-text-primary, #0f172a)"
      },
      "helpText": {
        "fontSize": "var(--font-size-xs, 0.75rem)",
        "color": "var(--semantic-text-secondary, #64748b)",
        "marginTop": "var(--spacing-1, 0.25rem)"
      },
      "errorText": {
        "fontSize": "var(--font-size-xs, 0.75rem)",
        "color": "var(--colors-error-600, #dc2626)",
        "marginTop": "var(--spacing-1, 0.25rem)"
      }
    },

    "badges": {
      "status": {
        "padding": "var(--spacing-1, 0.25rem) var(--spacing-3, 0.75rem)",
        "borderRadius": "var(--border-radius-full, 9999px)",
        "fontSize": "var(--font-size-xs, 0.75rem)",
        "fontWeight": "var(--font-weight-medium, 500)",
        "variants": {
          "success": {
            "background": "var(--colors-success-100, #dcfce7)",
            "color": "var(--colors-success-800, #166534)",
            "border": "1px solid var(--colors-success-200, #bbf7d0)"
          },
          "warning": {
            "background": "var(--colors-warning-100, #fef3c7)",
            "color": "var(--colors-warning-800, #92400e)",
            "border": "1px solid var(--colors-warning-200, #fde68a)"
          },
          "error": {
            "background": "var(--colors-error-100, #fee2e2)",
            "color": "var(--colors-error-800, #991b1b)",
            "border": "1px solid var(--colors-error-200, #fecaca)"
          },
          "info": {
            "background": "var(--colors-primary-100, #e0f2fe)",
            "color": "var(--colors-primary-800, #075985)",
            "border": "1px solid var(--colors-primary-200, #bae6fd)"
          },
          "neutral": {
            "background": "var(--colors-secondary-100, #f1f5f9)",
            "color": "var(--colors-secondary-800, #1e293b)",
            "border": "1px solid var(--colors-secondary-200, #e2e8f0)"
          }
        }
      },
      "role": {
        "admin": "var(--badge-variant-error)",
        "moderator": "var(--badge-variant-warning)",
        "community_manager": "var(--badge-variant-info)",
        "finance": "var(--badge-variant-success)",
        "content_editor": "var(--badge-variant-neutral)",
        "ops": "var(--badge-variant-info)",
        "viewer": "var(--badge-variant-neutral)"
      }
    },

    "modals": {
      "overlay": {
        "background": "var(--semantic-overlay, rgba(0, 0, 0, 0.5))",
        "backdropFilter": "blur(4px)",
        "zIndex": "var(--z-index-modal, 1400)"
      },
      "container": {
        "background": "var(--semantic-background, #ffffff)",
        "borderRadius": "var(--border-radius-xl, 0.75rem)",
        "shadow": "var(--shadow-2xl)",
        "maxWidth": "42rem",
        "padding": "var(--spacing-6, 1.5rem)"
      },
      "header": {
        "fontSize": "var(--font-size-xl, 1.25rem)",
        "fontWeight": "var(--font-weight-semibold, 600)",
        "marginBottom": "var(--spacing-4, 1rem)"
      }
    },

    "toast": {
      "container": {
        "background": "var(--semantic-background, #ffffff)",
        "border": "1px solid var(--semantic-border, #e2e8f0)",
        "borderRadius": "var(--border-radius-lg, 0.5rem)",
        "shadow": "var(--shadow-lg)",
        "padding": "var(--spacing-4, 1rem)",
        "zIndex": "var(--z-index-toast, 1700)",
        "minWidth": "20rem"
      },
      "variants": {
        "success": {
          "borderLeft": "4px solid var(--colors-success-600, #16a34a)",
          "iconColor": "var(--colors-success-600, #16a34a)"
        },
        "warning": {
          "borderLeft": "4px solid var(--colors-warning-600, #d97706)",
          "iconColor": "var(--colors-warning-600, #d97706)"
        },
        "error": {
          "borderLeft": "4px solid var(--colors-error-600, #dc2626)",
          "iconColor": "var(--colors-error-600, #dc2626)"
        },
        "info": {
          "borderLeft": "4px solid var(--colors-primary-600, #0284c7)",
          "iconColor": "var(--colors-primary-600, #0284c7)"
        }
      }
    },

    "charts": {
      "colors": {
        "primary": ["#0ea5e9", "#38bdf8", "#7dd3fc", "#bae6fd", "#e0f2fe"],
        "success": ["#22c55e", "#4ade80", "#86efac", "#bbf7d0", "#dcfce7"],
        "warning": ["#f59e0b", "#fbbf24", "#fcd34d", "#fde68a", "#fef3c7"],
        "error": ["#ef4444", "#f87171", "#fca5a5", "#fecaca", "#fee2e2"],
        "multi": ["#0ea5e9", "#22c55e", "#f59e0b", "#ef4444", "#f472b6", "#a855f7"]
      },
      "grid": {
        "lineColor": "var(--semantic-border, #e2e8f0)",
        "lineWidth": 1,
        "lineDash": [5, 5]
      },
      "axis": {
        "fontSize": "var(--font-size-xs, 0.75rem)",
        "color": "var(--semantic-text-secondary, #64748b)"
      },
      "legend": {
        "fontSize": "var(--font-size-sm, 0.875rem)",
        "spacing": "var(--spacing-4, 1rem)"
      }
    },

    "orgBranding": {
      "variables": [
        "--brand-primary",
        "--brand-secondary",
        "--brand-accent",
        "--brand-logo-url",
        "--brand-favicon-url"
      ],
      "fallbacks": {
        "primary": "#c8102e",
        "secondary": "#ffffff",
        "accent": "#ff6b35",
        "logoUrl": "/logo.JPG",
        "faviconUrl": "/favicon.ico"
      },
      "cssInjection": {
        "method": "dangerouslySetInnerHTML",
        "scope": ":root",
        "source": "directus.items('theme').readOne(orgId)"
      }
    }
  },

  "accessibility": {
    "focusRing": {
      "width": "2px",
      "style": "solid",
      "color": "var(--semantic-border-focus, #0ea5e9)",
      "offset": "2px",
      "borderRadius": "inherit"
    },
    "minTouchTarget": {
      "width": "44px",
      "height": "44px"
    },
    "colorContrast": {
      "normal": {
        "min": "4.5:1",
        "target": "7:1"
      },
      "large": {
        "min": "3:1",
        "target": "4.5:1"
      }
    },
    "animation": {
      "reducedMotion": {
        "duration": "0.01ms",
        "easing": "linear"
      }
    }
  },

  "responsive": {
    "mobile": {
      "breakpoint": "var(--breakpoint-sm, 640px)",
      "sidebar": {
        "width": "100%",
        "position": "absolute"
      },
      "topbar": {
        "height": "3.5rem"
      }
    },
    "tablet": {
      "breakpoint": "var(--breakpoint-md, 768px)",
      "sidebar": {
        "width": "12rem"
      }
    },
    "desktop": {
      "breakpoint": "var(--breakpoint-lg, 1024px)",
      "sidebar": {
        "width": "16rem"
      }
    }
  },

  "darkMode": {
    "enabled": true,
    "strategy": "class",
    "overrides": {
      "background": "#0a0a0a",
      "surface": "#18181b",
      "text-primary": "#fafafa",
      "text-secondary": "#a1a1aa",
      "border": "#27272a",
      "sidebar-background": "#18181b"
    }
  }
}
